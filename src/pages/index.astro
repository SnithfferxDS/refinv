---
import Layout from '../layouts/Layout.astro';
import ProductList from '../components/ProductList.astro';
import AddProduct from '../components/AddProduct.astro';
---

<Layout title="Electronics Inventory">
	<main class="container mx-auto px-4 py-8">
		<h1 class="text-4xl font-bold text-center mb-8">Electronics Inventory Management</h1>
		
		<div class="grid grid-cols-1 md:grid-cols-2 gap-8">
			<div>
				<h2 class="text-2xl font-semibold mb-4">Add New Product</h2>
				<AddProduct />
			</div>
			
			<div>
				<h2 class="text-2xl font-semibold mb-4">Product List</h2>
				<ProductList />
			</div>
		</div>
	</main>
</Layout>